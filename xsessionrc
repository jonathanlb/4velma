# Sample .xsessionrc file to start up 4velma from a card reader.
CONDA_BIN=${HOME}/miniconda3/bin
VELMA_HOME=${HOME}/Documents/4velma
VELMA_PICS=/mnt/DCIM/101_PANA

SCRIPT="source ${CONDA_BIN}/activate 4velma && python ${VELMA_HOME}/4velma.py -i ${VELMA_PICS} -d 300 -f"

echo "${SCRIPT}" > ${HOME}/velma_err
/bin/bash -c "${SCRIPT}" 2>> ${HOME}/velma_err &
echo '4velma started'
